<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_cart"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView1"
            android:background="@drawable/black_semi_trans_strip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/pad_10dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >
                <Button
                    android:id="@+id/pickup"
                    style="@style/btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/pad_10dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/lbl1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mr. Vamsi Krishna"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lbl3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Flat No. 1608, Yarrow Building, Nahar Amrit Shakti"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/lbl2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$25"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/main_color_red"
        android:padding="@dimen/pad_15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Items we provide"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_25sp"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/info_list"
            ></ListView>
        </LinearLayout>
</LinearLayout>