<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:id="@+id/home_make_it_blank"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="@color/gray_light"
        android:layout_height="fill_parent">
        <!--<ProgressBar-->
        <!--android:id="@+id/home_details_progress_bar"-->
        <!--style="?android:attr/progressDrawable"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_centerVertical="true"/>-->

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/topImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_cart"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/topImageView"
            android:background="@drawable/black_semi_trans_strip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/pad_10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/home_user_edit"
                    style="@style/btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/topImageView"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/pad_10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_fullName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mr. Vamsi Krishna"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/user_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Flat No. 1608, Yarrow Building, Nahar Amrit Shakti"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_12sp" />

                        <ProgressBar
                            android:id="@+id/home_details_progress_bar"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/user_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$25"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color_red"
        android:gravity="center_vertical"
        android:padding="@dimen/pad_15dp">

        <TextView
            android:id="@+id/introMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GROCERIES DELIVERED \nRIGHT TO YOUR DOORSTEP WITHIN MINUTES"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color_red"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/main_color_red"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/pad_10dp"
            android:padding="@dimen/pad_20dp"
            android:layout_gravity="top"
            android:weightSum="1">

            <Button
                android:id="@+id/informationButton"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/info" />

            <TextView
                android:id="@+id/informationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_15sp"
                android:layout_marginBottom="@dimen/pad_30dp" />

            <Button
                android:id="@+id/transactionsButton"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/location" />

            <TextView
                android:id="@+id/transactionsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transactions"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_15sp"
                android:layout_marginBottom="@dimen/pad_30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_color_red"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical"
            android:padding="@dimen/pad_30dp"
            android:layout_marginLeft="@dimen/pad_20dp"
            android:layout_gravity="top"
            android:weightSum="3"
            android:id="@+id/requestTrolley">

            <Button
                android:id="@+id/requestTrolleyButton"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cart"
                android:layout_marginBottom="@dimen/pad_15dp" />

            <TextView
                android:id="@+id/requestTrolleyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Trolley"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_color_red"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/pad_30dp"
            android:layout_marginLeft="@dimen/pad_20dp"
            android:layout_gravity="top"
            android:weightSum="3"
            android:id="@+id/home_order_progress_bar">

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_color_red"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/pad_30dp"
            android:layout_marginLeft="@dimen/pad_20dp"
            android:layout_gravity="top"
            android:weightSum="3"
            android:id="@+id/orderConfirmed"
            android:visibility="visible">

            <TextView
                android:id="@+id/orderConfirmedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                android:layout_marginBottom="@dimen/pad_50dp"
                android:text="@string/order_confirmed_text"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_14sp" />
            <Button
                android:id="@+id/home_cancel_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_cancel_order"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>