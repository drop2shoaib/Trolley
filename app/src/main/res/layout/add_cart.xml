<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_cart"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView1"
                android:background="@drawable/black_semi_trans_strip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/pad_10dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/lbl1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chicken Fingers"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lbl3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 pcs buffalo wings, poppers and cheese sticks"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/lbl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$25"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_16sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/pad_10dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quantity"
                android:textColor="@color/main_color_gray_dk"
                android:textSize="@dimen/txt_14sp" />

            <Button
                android:id="@+id/minus"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_minus" />

            <TextView
                android:id="@+id/quanity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad_3dp"
                android:layout_marginRight="@dimen/pad_3dp"
                android:background="@drawable/white_gray_rect"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/main_color_gray_dk"
                android:textSize="@dimen/txt_14sp" />

            <Button
                android:id="@+id/plus"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_plus" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_color_red"
            android:paddingBottom="@dimen/pad_5dp"
            android:paddingLeft="@dimen/pad_10dp"
            android:paddingRight="@dimen/pad_10dp"
            android:paddingTop="@dimen/pad_5dp"
            android:text="Additional Options"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_14sp" >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/pad_10dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/pad_5dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lbl1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Make it with"
                    android:textColor="@color/main_color_gray_dk"
                    android:textSize="@dimen/txt_13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lbl3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vegetables"
                    android:textColor="@color/main_color_gray_dk"
                    android:textSize="@dimen/txt_12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right_black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_cart"
            android:orientation="vertical"
            android:padding="@dimen/pad_10dp" >

            <TextView
                android:id="@+id/lbl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special Instructions"
                android:textColor="@color/main_color_gray_dk"
                android:textSize="@dimen/txt_13sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pad_3dp"
                android:layout_marginTop="@dimen/pad_5dp"
                android:background="@color/white"
                android:gravity="top"
                android:lines="4"
                android:padding="@dimen/pad_5dp"
                android:textSize="@dimen/txt_14sp" >

            </EditText>

            <TextView
                android:id="@+id/lbl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Example: extra cheese, side of dressing, etc.\nAdditional charge"
                android:textColor="@color/main_color_gray_dk"
                android:textSize="@dimen/txt_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/pad_15dp" >

            <LinearLayout
                android:id="@+id/btnDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                style="@style/btn"
                android:background="@drawable/btn_red_big"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_add_cart"
                    android:drawablePadding="@dimen/pad_5dp"
                    android:text="@string/add_to_cart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>