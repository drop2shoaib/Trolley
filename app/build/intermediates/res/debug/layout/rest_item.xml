<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/pad_5dp" >

    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/pad_5dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_r1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/lbl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_weight="1"
                android:textColor="@color/main_color_gray_dk"
                android:textSize="@dimen/txt_16sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.22 mi"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/txt_12sp"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            android:gravity="center_vertical">

           <RatingBar
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pad_20dp"
            android:isIndicator="true"
            android:progressDrawable="@drawable/rating_layer" />
            <TextView
                android:id="@+id/lbl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="341 reviews"
                android:textColor="@color/main_color_gray_dk"
                android:textSize="@dimen/txt_12sp"
                android:layout_marginLeft="@dimen/pad_5dp"
                 />
        </LinearLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Sushi, Chinese, Japanese"
    android:textColor="@color/gray_light"
    android:textSize="@dimen/txt_12sp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery: "
                android:textColor="@color/main_color_gray_dk"
                android:textSize="@dimen/txt_12sp"
                 />
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Free!"
                android:textColor="#3fb107"
                android:textSize="@dimen/txt_12sp"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Min: $20"
                android:textColor="@color/main_color_gray_dk"
                android:textSize="@dimen/txt_12sp"
                 />
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45-60 min"
                android:textColor="@color/main_color_gray_dk"
                android:textSize="@dimen/txt_12sp"
                 />
</LinearLayout>
        
    </LinearLayout>

</LinearLayout>
