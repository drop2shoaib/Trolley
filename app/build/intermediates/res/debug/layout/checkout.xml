<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color_red_dk"
        android:gravity="center"
        android:paddingBottom="@dimen/pad_10dp"
        android:paddingTop="@dimen/pad_10dp" >

        <Button
            android:id="@+id/pickup"
            style="@style/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pickup" />

        <Button
            android:id="@+id/deliver"
            style="@style/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_5dp"
            android:background="@drawable/deliver" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color_gray_dk"
        android:gravity="center_vertical"
        android:padding="@dimen/pad_10dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Item"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_13sp" />

        <View
            android:id="@+id/view1"
            android:layout_width="@dimen/divider"
            android:layout_height="match_parent"
            android:background="@color/gray_light" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Qty"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_13sp" 
            android:layout_marginLeft="@dimen/pad_5dp"
            android:layout_marginRight="@dimen/pad_5dp"/>

        <View
            android:id="@+id/view1"
            android:layout_width="@dimen/divider"
            android:layout_height="match_parent"
            android:background="@color/gray_light" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Price"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_13sp" 
            android:layout_marginLeft="@dimen/pad_5dp"
            android:layout_marginRight="@dimen/pad_5dp"/>

        <View
            android:id="@+id/view1"
            android:layout_width="@dimen/divider"
            android:layout_height="match_parent"
            android:background="@color/gray_light" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Del"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_13sp" 
            android:layout_marginLeft="@dimen/pad_5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/pad_10dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Appetizer Combo French  Fries"
            android:textColor="@color/main_color_gray_dk"
            android:textSize="@dimen/txt_14sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_gray_rect"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/main_color_gray_dk"
            android:textSize="@dimen/txt_14sp" 
            android:layout_marginLeft="@dimen/pad_5dp"
            android:layout_marginRight="@dimen/pad_5dp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="$25.99"
            android:textColor="@color/main_color_gray_dk"
            android:textSize="@dimen/txt_14sp"
             />

        <ImageView
            android:id="@+id/del"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_del"
            android:layout_marginLeft="@dimen/pad_10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_weight="1"
        android:gravity="center_vertical">
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:background="@color/gray_light"
            android:layout_marginBottom="@dimen/pad_10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/pad_20dp" >
            <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal"
            android:textColor="@color/main_color_gray_dk"
            android:textSize="@dimen/txt_14sp" 
            android:layout_marginRight="@dimen/pad_10dp"/>
             <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$25.99"
            android:textColor="@color/main_color_gray_dk"
            android:textSize="@dimen/txt_14sp" 
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/pad_20dp" >
            <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount"
            android:textColor="#39b54a"
            android:textSize="@dimen/txt_14sp" 
            android:layout_marginRight="@dimen/pad_10dp"/>
             <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$00.00"
            android:textColor="#39b54a"
            android:textSize="@dimen/txt_14sp" 
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/pad_20dp" >
            <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tax"
            android:textColor="@color/main_color_gray_dk"
            android:textSize="@dimen/txt_14sp" 
            android:layout_marginRight="@dimen/pad_10dp"/>
             <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$01.00"
            android:textColor="@color/main_color_gray_dk"
            android:textSize="@dimen/txt_14sp" 
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/pad_20dp" >
            <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Charge"
            android:textColor="@color/main_color_gray_dk"
            android:textSize="@dimen/txt_14sp" 
            android:layout_marginRight="@dimen/pad_10dp"/>
             <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$00.01"
            android:textColor="@color/main_color_gray_dk"
            android:textSize="@dimen/txt_14sp" 
            />
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:background="@color/gray_light"
            android:layout_marginTop="@dimen/pad_15dp"
            android:layout_marginBottom="@dimen/pad_3dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/pad_20dp" >
            <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textStyle="bold"
            android:textColor="@color/main_color_gray_dk"
            android:textSize="@dimen/txt_14sp" 
            android:layout_marginRight="@dimen/pad_10dp"/>
             <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$27.00"
            android:textStyle="bold"
            android:textColor="@color/main_color_gray_dk"
            android:textSize="@dimen/txt_14sp" 
            />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/pad_15dp" >

        <LinearLayout
            android:id="@+id/btnDone"
            style="@style/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_red_big"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_checkout"
                android:drawablePadding="@dimen/pad_5dp"
                android:text="@string/checkout"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

